            </summary>
            <param name="sceneItemOwner"><see cref="T:TWEngine.IStatusBarSceneItem"/> Owner</param>
            <param name="statusBarItem">(OUT) <see cref="T:TWEngine.IStatusBarItem"/> Item</param>
        </member>
        <member name="M:TWEngine.StatusBars.StatusBar.RemoveStatusBarItem(TWEngine.IStatusBarItem@)">
