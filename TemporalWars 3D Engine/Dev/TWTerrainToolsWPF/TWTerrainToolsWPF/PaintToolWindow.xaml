                <HierarchicalDataTemplate 
          DataType="{x:Type DirectoryViewModel:DirectoryInfoViewModel}" 
          ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Margin="3,0" Source="{Binding DirectoryImage}"  />
                        <TextBlock Text="{Binding DirectoryName}" FontFamily="Microsoft Sans Serif" FontSize="8.25" Foreground="MidnightBlue" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type DirectoryViewModel:FileInfoViewModel}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="25" Height="25" Margin="3,0" Source="{Binding FileIcon}"  />
                        <TextBlock Text="{Binding FileName}" FontFamily="Microsoft Sans Serif" FontSize="8.25" Foreground="MidnightBlue" />
